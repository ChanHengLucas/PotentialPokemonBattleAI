{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pokeai.dev/schemas/team.schema.json",
  "title": "PokéAI Team Schema",
  "description": "Schema for competitive Pokémon teams",
  "type": "object",
  "properties": {
    "pokemon": {
      "type": "array",
      "minItems": 6,
      "maxItems": 6,
      "items": {
        "type": "object",
        "properties": {
          "species": {
            "type": "string",
            "minLength": 1
          },
          "nickname": {
            "type": "string"
          },
          "level": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 100
          },
          "gender": {
            "type": "string",
            "enum": ["M", "F", "N"]
          },
          "shiny": {
            "type": "boolean",
            "default": false
          },
          "item": {
            "type": "string"
          },
          "ability": {
            "type": "string",
            "minLength": 1
          },
          "nature": {
            "type": "string"
          },
          "evs": {
            "type": "object",
            "properties": {
              "hp": {"type": "integer", "minimum": 0, "maximum": 252},
              "atk": {"type": "integer", "minimum": 0, "maximum": 252},
              "def": {"type": "integer", "minimum": 0, "maximum": 252},
              "spa": {"type": "integer", "minimum": 0, "maximum": 252},
              "spd": {"type": "integer", "minimum": 0, "maximum": 252},
              "spe": {"type": "integer", "minimum": 0, "maximum": 252}
            },
            "additionalProperties": false
          },
          "moves": {
            "type": "array",
            "minItems": 1,
            "maxItems": 4,
            "items": {
              "type": "string"
            }
          },
          "teraType": {
            "type": "string"
          }
        },
        "required": ["species", "ability", "moves"],
        "additionalProperties": false
      }
    },
    "name": {
      "type": "string"
    },
    "format": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["pokemon", "format"],
  "additionalProperties": false
}
