{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pokesai.dev/schemas/action.schema.json",
  "title": "BattleAction",
  "oneOf": [
    {
      "type": "object",
      "required": ["type", "moveId"],
      "properties": {
        "type": { "const": "MOVE" },
        "moveId": { "type": "string" },
        "target": { "type": ["string", "integer", "null"], "description": "Target slot or id if applicable" }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": ["type", "targetIndex"],
      "properties": {
        "type": { "const": "SWITCH" },
        "targetIndex": { "type": "integer", "minimum": 0, "maximum": 5 }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "const": "TERASTALLIZE" },
        "teraType": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    }
  ]
}
